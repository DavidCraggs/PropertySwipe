# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Auth Redirect URL (must match Supabase Dashboard > Auth > URL Configuration)
# OAuth providers (Google, Apple) and Magic Link configured via Supabase Dashboard
VITE_AUTH_REDIRECT_URL=http://localhost:5173/auth/callback

# Admin Configuration (CHANGE IN PRODUCTION)
# WARNING: These credentials are for development/testing only
# In production, use a secure backend and secrets management
VITE_ADMIN_EMAIL=admin@geton.com
VITE_ADMIN_PASSWORD=Admin1234!

# Email Service Configuration
# Provider: sendgrid, resend, aws-ses, or mock (for development)
VITE_EMAIL_PROVIDER=mock
VITE_EMAIL_API_KEY=your-sendgrid-or-resend-api-key
VITE_EMAIL_FROM=noreply@geton.app
VITE_EMAIL_FROM_NAME=GetOn

# Development Settings
VITE_ENV=development
